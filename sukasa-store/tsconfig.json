{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "target": "ES2020", // Supports optional chaining
    "lib": ["ESNext"], // Includes modern JavaScript features
    "jsx": "react-jsx",
    "module": "commonjs",
    "strict": true,
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "nativewind-env.d.ts",
    "lib/hooks/useLogin.js"
  ]
}
